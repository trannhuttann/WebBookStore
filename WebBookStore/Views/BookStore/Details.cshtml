@{
    ViewBag.Title = Model.TenSach;
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <img src="~/product_imgs/@Model.AnhBia" alt="@Model.TenSach" class="img-fluid rounded shadow">
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">@Model.TenSach</h1>
            <div class="mb-4">
                <h5 class="text-muted">Mô tả:</h5>
                <p class="text-justify">@Model.MoTa</p>
            </div>
            <div class="mb-4">
                <h3 class="text-primary">Giá bán: @Model.GiaBan.ToString("N0") VNĐ</h3>
            </div>
            <div class="mb-4">
                @if (Model.SoLuongTon > 0)
                {
                    <p class="text-success">
                        <i class="fas fa-check-circle"></i> Còn hàng (@Model.SoLuongTon sản phẩm)
                    </p>
                    <a href="@Url.Action("ThemGiohang", "Giohang", new { @iMasach = Model.MaSach, @strURL = Request.Url.ToString() })" class="btn btn-primary btn-lg">
                        <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                    </a>
                }
                else
                {
                    <p class="text-danger">
                        <i class="fas fa-times-circle"></i> Hết hàng
                    </p>
                    <button class="btn btn-secondary btn-lg" disabled>Hết hàng</button>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .text-justify {
        text-align: justify;
    }

    .img-fluid {
        max-height: 500px;
        object-fit: contain;
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 18px;
    }

    media (max-width: 768px) {
        .container {
            margin-top: 2rem;
        }
    }
</style>