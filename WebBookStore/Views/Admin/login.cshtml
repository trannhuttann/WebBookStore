@{
    ViewBag.Title = "Đăng nhập Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
        }

        body {
            background: linear-gradient(120deg, #2980b9, #8e44ad);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            flex-direction: column;
        }

        .content-wrapper {
            flex: 1 0 auto;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-form {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.2);
            max-width: 400px;
            width: 100%;
        }

            .login-form h2 {
                margin-bottom: 30px;
                text-align: center;
                color: #333;
                font-weight: 600;
            }

        .form-control {
            border-radius: 25px;
            padding: 12px 20px;
        }

        .btn-primary {
            border-radius: 25px;
            padding: 12px 20px;
            font-weight: 600;
            background-color: #2980b9;
            border: none;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #3498db;
            }

        .form-check-label {
            font-size: 0.9rem;
        }

        .input-group-text {
            background-color: transparent;
            border-right: none;
            border-radius: 25px 0 0 25px;
        }

        .input-group .form-control {
            border-left: none;
            border-radius: 0 25px 25px 0;
        }

        .alert-danger {
            border-radius: 10px;
        }

        .footer {
            flex-shrink: 0;
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            text-align: right;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="content-wrapper">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="login-form">
                        <h2>ĐĂNG NHẬP ADMIN</h2>
                        @if (!string.IsNullOrEmpty(ViewBag.ThongBao))
                        {
                            <div class="alert alert-danger">@ViewBag.ThongBao</div>
                        }
                        @using (Html.BeginForm())
                        {
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập">
                                </div>
                                @if (!string.IsNullOrEmpty(ViewData["Loi1"] as string))
                                {
                                    <span class="text-danger">@ViewData["Loi1"]</span>
                                }
                            </div>
                            <div class="mb-4">
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu">
                                </div>
                                @if (!string.IsNullOrEmpty(ViewData["Loi2"] as string))
                                {
                                    <span class="text-danger">@ViewData["Loi2"]</span>
                                }
                            </div>
                            <div class="mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="remember">
                                <label class="form-check-label" for="remember">Ghi nhớ tài khoản</label>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Đăng nhập</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p>© 2024 Admin Panel</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>