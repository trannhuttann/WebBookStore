@model WebBookStore.Models.SACH

@{
    ViewBag.Title = "Thêm mới sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Thêm Sách mới</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "ADNXB", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        }

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.TenSach, "Tên sách", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.GiaBan, "Giá bán", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 4 })
                                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.Label("AnhBia", "Ảnh bìa", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                <input type="file" name="AnhBia" class="form-control" />
                                @Html.ValidationMessage("AnhBia", "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.SoLuongTon, "Số lượng tồn", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.MaCD, "Chủ đề", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.DropDownList("MaCD", (SelectList)ViewBag.MaCD, "Chọn chủ đề", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaCD, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row mb-3">
                            @Html.LabelFor(model => model.MaNXB, "Nhà xuất bản", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                            <div class="col-sm-9">
                                @Html.DropDownList("MaNXB", (SelectList)ViewBag.MaNXB, "Chọn nhà xuất bản", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-9 offset-sm-3">
                                <button type="submit" class="btn btn-primary">Thêm sách</button>
                                @Html.ActionLink("Quay lại", "Sach", "Admin", null, new { @class = "btn btn-secondary ms-2" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="footer mt-auto py-3 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <p class="mb-0">&copy; 2024 WebBookStore. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-end">
                <p class="mb-0">Designed by Your Name</p>
            </div>
        </div>
    </div>
</footer>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<style>
    html, body {
        height: 100%;
    }

    body {
        display: flex;
        flex-direction: column;
    }

    .container {
        flex: 1 0 auto;
    }

    .footer {
        flex-shrink: 0;
    }

    .card {
        border: none;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background-color: var(--primary-color);
        color: var(--light-color);
        border-bottom: none;
    }

    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .btn-primary {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #e65100;
            border-color: #e65100;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }
</style>