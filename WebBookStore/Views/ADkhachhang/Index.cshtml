@model IEnumerable<WebBookStore.Models.KHACHHANG>
@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Danh sách Khách Hàng</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        @Html.ActionLink("Thêm Khách Hàng", "Create", "ADkhachhang", null, new { @class = "btn btn-primary" })
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Họ Tên</th>
                                    <th>Tài Khoản</th>
                                    <th>Email</th>
                                    <th>Địa Chỉ</th>
                                    <th>Số Điện Thoại</th>
                                    <th>Ngày Sinh</th>
                                    <th>Hành Động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kh in Model)
                                {
                                    <tr>
                                        <td>@kh.HoTen</td>
                                        <td>@kh.TaiKhoan</td>
                                        <td>@kh.Email</td>
                                        <td>@kh.DiachiKH</td>
                                        <td>@kh.DienThoaiKH</td>
                                        <td>@(kh.NgaySinh?.ToString("dd/MM/yyyy"))</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @Html.ActionLink("Sửa", "Edit", "ADkhachhang", new { id = kh.MaKH }, new { @class = "btn btn-warning btn-sm" })
                                                @Html.ActionLink("Xóa", "Delete", "ADkhachhang", new { id = kh.MaKH }, new { @class = "btn btn-danger btn-sm ms-2", onclick = "return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background-color: var(--primary-color);
        color: var(--light-color);
        border-bottom: none;
    }

    .table {
        margin-bottom: 0;
        font-size: 0.9rem;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn-primary {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
    }

        .btn-primary:hover {
            background-color: #e65100;
            border-color: #e65100;
        }

    .btn-warning {
        color: var(--dark-color);
    }

    .btn-group .btn {
        border-radius: 20px;
        font-size: 0.8rem;
    }

    .table-dark {
        background-color: var(--primary-color);
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .card-body {
        padding: 1.5rem;
    }
</style>