@model WebBookStore.Models.KHACHHANG

@{
    ViewBag.Title = "Thông Tin Khách Hàng";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Thông Tin Khách Hàng</h2>
                </div>
                <div class="card-body">
                    <h4 class="card-title mb-4">Thông Tin Cá Nhân</h4>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Họ Tên:</strong>
                            <p>@Model.HoTen</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Tài Khoản:</strong>
                            <p>@Model.TaiKhoan</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Email:</strong>
                            <p>@Model.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Địa Chỉ:</strong>
                            <p>@Model.DiachiKH</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Điện Thoại:</strong>
                            <p>@Model.DienThoaiKH</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Ngày Sinh:</strong>
                            <p>@Model.NgaySinh</p>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("Edit", "ThongTinKhachHang")" class="btn btn-primary">Chỉnh Sửa Thông Tin</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
