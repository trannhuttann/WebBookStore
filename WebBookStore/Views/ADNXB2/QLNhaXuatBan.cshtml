@model IEnumerable<WebBookStore.Models.NHAXUATBAN>
@{
    ViewBag.Title = "Quản lý nhà xuất bản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Quản lý Nhà Xuất Bản</h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        @Html.ActionLink("Thêm Nhà Xuất Bản", "Create", "ADNXB2", null, new { @class = "btn btn-primary" })
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th>Mã NXB</th>
                                    <th>Tên NXB</th>
                                    <th>Địa Chỉ</th>
                                    <th>Điện Thoại</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaNXB</td>
                                        <td>@item.TenNXB</td>
                                        <td>@item.DiaChi</td>
                                        <td>@item.DienThoai</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNXB }, new { @class = "btn btn-warning btn-sm" })
                                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNXB }, new { @class = "btn btn-danger btn-sm ms-2", onclick = "return confirm('Bạn có chắc chắn muốn xóa nhà xuất bản này?');" })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        transition: all 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    .card-header {
        background-color: var(--primary-color);
        color: var(--light-color);
        border-bottom: none;
    }

    .table {
        margin-bottom: 0;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    .btn-primary {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
    }

        .btn-primary:hover {
            background-color: #e65100;
            border-color: #e65100;
        }

    .btn-warning {
        color: var(--dark-color);
    }

    .btn-group .btn {
        border-radius: 20px;
    }

    .table-dark {
        background-color: var(--primary-color);
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>