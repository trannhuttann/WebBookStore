@model WebBookStore.Models.SACH

@{
    ViewBag.Title = "Chi tiết sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Chi tiết sách</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="~/product_imgs/@Model.AnhBia" alt="@Model.TenSach" class="img-fluid rounded" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-3">Tên sách:</dt>
                                <dd class="col-sm-9">@Model.TenSach</dd>

                                <dt class="col-sm-3">Giá bán:</dt>
                                <dd class="col-sm-9">@Model.GiaBan VNĐ</dd>

                                <dt class="col-sm-3">Mô tả:</dt>
                                <dd class="col-sm-9">@Model.MoTa</dd>

                                <dt class="col-sm-3">Số lượng tồn:</dt>
                                <dd class="col-sm-9">@Model.SoLuongTon</dd>

                                <dt class="col-sm-3">Chủ đề:</dt>
                                <dd class="col-sm-9">@Model.CHUDE.TenChuDe</dd>

                                <dt class="col-sm-3">Nhà xuất bản:</dt>
                                <dd class="col-sm-9">@Model.NHAXUATBAN.TenNXB</dd>

                                <dt class="col-sm-3">Ngày cập nhật:</dt>
                                <dd class="col-sm-9">@Model.NgayCapNhat</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center py-3">
                   
                    @Html.ActionLink("Quay lại", "Sach", "Admin", null, new { @class = "btn btn-secondary ms-2" })
                </div>
            </div>
        </div>
    </div>
</div>


